<layout id="WatchFace">
	<drawable class="Background" />
	
	<!-- top -->
	<label id="DateLabel" x="25%" y="20"
		font="Graphics.FONT_XTINY"
		justification="Graphics.TEXT_JUSTIFY_LEFT"
		color="Graphics.COLOR_WHITE" />
	<label id="StepIcon" x="75%" y="20" font="@Fonts.id_symbols" color="Graphics.COLOR_WHITE" text="s" justification="Graphics.TEXT_JUSTIFY_RIGHT"/>
	<label id="StepLabel" x="68%" y="20"
		font="Graphics.FONT_XTINY"
		justification="Graphics.TEXT_JUSTIFY_RIGHT"
		color="Graphics.COLOR_WHITE" />
		
	<!-- bottom -->
	<label id="BatteryIcon" x="25%" y="205" font="@Fonts.id_symbols" color="Graphics.COLOR_WHITE"/>
	<label id="BatteryLabel" x="32%" y="205"
		font="Graphics.FONT_XTINY"
		justification="Graphics.TEXT_JUSTIFY_LEFT"
		color="Graphics.COLOR_WHITE" />
		
	<label id="HRIcon" x="75%" y="205" font="@Fonts.id_symbols" color="Graphics.COLOR_WHITE" text="h" justification="Graphics.TEXT_JUSTIFY_RIGHT"/>
	<label id="HRLabel" x="68%" y="205" 
		font="Graphics.FONT_XTINY"
		justification="Graphics.TEXT_JUSTIFY_RIGHT"
		color="Graphics.COLOR_WHITE" />
